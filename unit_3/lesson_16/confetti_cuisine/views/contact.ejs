<div class="subscription-container">
  <div class="subscription-image">
    <img src="images/graph.png" alt="Graph illustration">
  </div>
  <div class="subscription-form-wrapper">
    <h1>Subscribe!</h1>
    <p>Enter your email to stay updated and learn more:</p>
    <form class="subscription-form" action="/subscribe" method="post">
      <input type="text" name="name" placeholder="Full Name" required>
      <input type="email" name="email" placeholder="Email Address" required>
      <input type="text" name="zipCode" placeholder="Zip Code" pattern="[0-9]{5}" required>
      <button type="submit">Subscribe</button>
    </form>
  </div>
</div>
