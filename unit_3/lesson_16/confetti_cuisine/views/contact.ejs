<!-- ==============================
     Subscription Section
     ============================== -->
<div class="subscription-container">
  <!-- Left side: image illustration -->
  <div class="subscription-image">
    <img src="/images/graph.png" alt="Data graph illustration showing growth trends">
  </div>

  <!-- Right side: subscription form -->
  <div class="subscription-form-wrapper">
    <h1>Join Our Newsletter</h1>
    <p>Subscribe to receive the latest updates, recipes, and exclusive content.</p>

    <form class="subscription-form" action="/subscribe" method="POST" novalidate>
      <!-- Full name -->
      <label for="name" class="visually-hidden">Full Name</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Full Name"
        autocomplete="name"
        required
      >

      <!-- Email -->
      <label for="email" class="visually-hidden">Email Address</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email Address"
        autocomplete="email"
        required
      >

      <!-- Zip code -->
      <label for="zipCode" class="visually-hidden">Zip Code</label>
      <input
        type="text"
        id="zipCode"
        name="zipCode"
        placeholder="Zip Code"
        pattern="[0-9]{4,6}"
        title="Enter a valid 4â€“6 digit zip or postal code"
        inputmode="numeric"
        required
      >

      <!-- Submit button -->
      <button type="submit">Subscribe</button>
    </form>
  </div>
</div>
