<section class="section subscription-container">
  <div class="subscription-form-wrapper">
    <h1>Subscribe</h1>
    <p>Enter your email to get updates.</p>
    <form class="subscription-form" action="/contact" method="POST">
      <input type="text" name="name" placeholder="Your Name" required />
      <input type="email" name="email" placeholder="Your Email" required />
      <label for="zipCode">Zip Code</label>
      <input type="text" name="zipCode" pattern="[0-9]{5}" placeholder="12345" required />
      <button type="submit">Subscribe</button>
    </form>
  </div>
</section>